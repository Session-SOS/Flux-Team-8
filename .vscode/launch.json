{
  // Flux â€” Debug Configurations
  // Launch configs for frontend, backend, and individual TS files.
  "version": "0.2.0",
  "configurations": [
    {
      // Launch the Vite dev server and open Chrome for frontend debugging
      "name": "Frontend: Vite Dev (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend/src",
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/*"
      },
      "preLaunchTask": ""
    },
    {
      // Attach the Python debugger to the FastAPI backend
      "name": "Backend: FastAPI (Python)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app.main:app", "--reload", "--host", "0.0.0.0", "--port", "8000"],
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/backend/.env",
      "jinja": true
    },
    {
      // Run and debug the currently open TypeScript file
      "name": "Debug Current TS File",
      "type": "node",
      "request": "launch",
      "runtimeArgs": ["--loader", "tsx"],
      "args": ["${file}"],
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
